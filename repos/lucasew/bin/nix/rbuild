#!/usr/bin/env bash

set -euo pipefail

if [ ! -v NIX_RBUILD_TARGET ]; then
  NIX_RBUILD_TARGET=whiterun
fi

echo "[*] Preparing for evaluation" >&2
ref="$1"; shift

IFS='#' read -r repo item <<< "$ref"

export repo

repo="$(nix flake metadata "$repo" --json | jq -r '.path')"

echo "[*] Resolved flake reference: $repo"

echo "[*] Copying stuff to be evaluated to $NIX_RBUILD_TARGET"
nix-copy-closure -s --to "$NIX_RBUILD_TARGET" "$repo"

echo "[*] Evaluating ref \"$ref\"" >&2

function ssh_run {
  ssh "$NIX_RBUILD_TARGET" "$@"
}

BUILD_UUID=$(uuidgen)

ssh_run -t mkdir -p /tmp/rbuild-outputs

ssh_run -t nom build "$repo#$item" --out-link  /tmp/rbuild-outputs/$BUILD_UUID --show-trace

RESULT_OUTPUT="$(ssh_run realpath /tmp/rbuild-outputs/$BUILD_UUID)"

echo "[*] Copying result back: \"$RESULT_OUTPUT\"" >&2

nix-copy-closure --from "$NIX_RBUILD_TARGET" "$RESULT_OUTPUT/"

echo "$RESULT_OUTPUT"
