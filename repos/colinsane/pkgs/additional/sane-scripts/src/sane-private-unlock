#!/usr/bin/env nix-shell
#!nix-shell -i bash -p gocryptfs

set -ex

# mounts the directory formerly known as ~/private.
# ALTERNATIVELY: `mount /mnt/persist/private`

mount=/mnt/persist/private
cipher=/nix/persist/home/colin/private
sudo mkdir -p "$mount"
sudo chown colin:users "$mount"
if [ ! -f "$mount/init" ]
then
  gocryptfs "$cipher" "$mount"
fi
