#! /usr/bin/env nix-shell
#! nix-shell -I nixpkgs=https://github.com/NixOS/nixpkgs/archive/a84cbb60f0296210be03c08d243670dd18a3f6eb.tar.gz -i bash -p findutils nixfmt

CHECK_ARG=

case $1 in
    -h)
        echo "$0 [-c]"
        ;;
    -c)
        CHECK_ARG=-c
        ;;
esac

find . -name '*.nix' \
  ! -path ./pkgs/firefox-addons/generated-firefox-addons.nix \
  -exec nixfmt $CHECK_ARG {} +
